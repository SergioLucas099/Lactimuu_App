<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lactimuu_prueba.com.optic.lactimuu_prueba.Recuperar_Password">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_recuperar_contrase単a"
        app:layout_constraintVertical_bias="0.0"
        android:icon="@drawable/ic_baseline_message_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        app:title="Recuperar Contrase単a"/>

    <ImageView
        android:id="@+id/imagen_inicio"
        android:layout_width="296dp"
        android:layout_height="218dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:src="@drawable/candado"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese su correo electronico para reestablecer la"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:textSize="15dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contrase単a"
        android:layout_marginLeft="160dp"
        android:textSize="15dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/editTextCorreo"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:drawablePadding="10dp"
        android:layout_marginLeft="30dp"
        android:elevation="3dp"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:hint="Correo Electronico"
        android:inputType="textEmailAddress"
        android:padding="20dp"/>

    <Button
        android:id="@+id/button_reestablecer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btn"
        android:text="Reestablecer Contrase単a"
        android:layout_marginLeft="80dp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:backgroundTint="@color/colorPrimary"/>

</androidx.appcompat.widget.LinearLayoutCompat>