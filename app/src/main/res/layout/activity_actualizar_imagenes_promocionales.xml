<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lactimuu_prueba.com.optic.lactimuu_prueba.Actualizar_Imagenes_Promocionales">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_escoger_img_promo"
        app:layout_constraintVertical_bias="0.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Lactimuu App" />

    <Button
        android:id="@+id/boton_escoger_img_promo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Escoger Imagen"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#ED008C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_escoger_img_promo" />

    <ImageView
        android:id="@+id/Imagen_producto_promo"
        android:layout_width="385dp"
        android:layout_height="360dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_escoger_img_promo" />

    <ProgressBar
        android:id="@+id/ProgressBarImgPromo"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Imagen_producto_promo" />

    <Button
        android:id="@+id/Boton_actualizar_ImgPromo"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Actualizar Imagen"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#ED008C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgressBarImgPromo" />

    <Button
        android:id="@+id/cargarimagenespromo"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Cargar Imagen"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#ED008C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toEndOf="@+id/Boton_actualizar_ImgPromo"
        app:layout_constraintTop_toBottomOf="@+id/ProgressBarImgPromo" />

    <TextView
        android:id="@+id/alm_img_promo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:hint=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgressBarImgPromo" />


</androidx.constraintlayout.widget.ConstraintLayout>