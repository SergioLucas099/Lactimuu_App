<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto: "
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_nom_pro_pl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Producto: "
                android:textSize="17sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio del Producto: "
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_pre_pro_pl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio del Producto: "
                android:layout_marginTop="5dp"
                android:textSize="17sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora del pedido: "
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_ho_ac_pl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hora del pedido: "
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha del pedido: "
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_fe_pe_pl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha del pedido: "
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad "
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_ca_to_pl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad "
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pedido:  "
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_mesa_pl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mesa del Pedido:  "
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio Total: $"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_pre_to_pl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total a Pagar: "
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:layout_marginLeft="2dp"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/boton_eliminar_pedido_pl"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="eliminar"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#ED008C"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#222222"
        android:layout_marginTop="20dp"/>

</LinearLayout>