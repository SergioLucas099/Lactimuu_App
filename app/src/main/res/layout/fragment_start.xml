<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lactimuu_prueba.com.optic.lactimuu_prueba.Clases_triqui_traka.Fragments.StartFragment"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="9"
    android:padding="10dp">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/tictactoelogo"
        android:layout_gravity="center"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_weight="2">

        <RadioButton
            android:id="@+id/r_2_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="2 Jugadores"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/r_with_computer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugar con la maquina"
            android:textSize="20sp"/>
    </RadioGroup>

    <View
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_weight="2" />

    <Button
        android:id="@+id/boton_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#ED008C"
        android:text="Jugar"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="#ED008C" />
</LinearLayout>