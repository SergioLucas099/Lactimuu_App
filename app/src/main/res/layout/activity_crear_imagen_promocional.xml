<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lactimuu_prueba.com.optic.lactimuu_prueba.Crear_Imagen_Promocional">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_Crear_imgPromo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleTextColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Lactimuu App" />

    <TextView
        android:id="@+id/textViewtituloaip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Imagen Promocional"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_Crear_imgPromo" />

    <Button
        android:id="@+id/escoger_imgPromo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Escoger Imagen"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#ED008C"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewtituloaip" />

    <ProgressBar
        android:id="@+id/ProgressBarImgPROMO"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Imagen_producto_promo" />

    <ImageView
        android:id="@+id/Imagen_producto_promo"
        android:layout_width="385dp"
        android:layout_height="360dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/escoger_imgPromo" />

    <Button
        android:id="@+id/Boton_Subir_Firestore_PROMO"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Subir Imagen"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#ED008C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgressBarImgPROMO" />

    <Button
        android:id="@+id/cargarimagenes_PROMO"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Cargar Imagen"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn"
        android:backgroundTint="#ED008C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgressBarImgPROMO" />

    <TextView
        android:id="@+id/alm_img_promo_da"
        android:layout_width="14dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:hint=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProgressBarImgPROMO" />

</androidx.constraintlayout.widget.ConstraintLayout>